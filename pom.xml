                <minecraft.version>1.21.4-R0.1-SNAPSHOT</minecraft.version>
            </properties>
        </profile>
        <profile>
            <id>1.21.5</id>
            <properties>
                <minecraft.version>1.21.5-R0.1-SNAPSHOT</minecraft.version>
            </properties>
        </profile>
        <profile>
            <id>1.21.6</id>
